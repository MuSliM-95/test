{
  "title": "The Four Golden Signals",
  "tags": ["golden-signals", "tablecrm", "sre"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-2m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "GOLDEN SIGNAL #2: Traffic (Request Rate)",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"tablecrm-backend\"}[1m])) by (method, handler)",
          "legendFormat": "{{method}} {{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "req/s",
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
	    "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "GOLDEN SIGNAL #3: Errors (Error Rate)",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"tablecrm-backend\",status=~\"5..\"}[1m])) by (method, handler)",
          "legendFormat": "{{method}} {{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "req/s",
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
	    "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.01},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "GOLDEN SIGNAL #1: Latency (Response Time)",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"tablecrm-backend\"}[1m])) by (le, method, handler))",
          "legendFormat": "p50 {{method}} {{handler}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"tablecrm-backend\"}[1m])) by (le, method, handler))",
          "legendFormat": "p95 {{method}} {{handler}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"tablecrm-backend\"}[1m])) by (le, method, handler))",
          "legendFormat": "p99 {{method}} {{handler}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "seconds",
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
	    "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.5},
              {"color": "orange", "value": 1},
              {"color": "red", "value": 2}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "GOLDEN SIGNAL #4: Saturation (Requests in Progress)",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "http_requests_inprogress{job=\"tablecrm-backend\"}",
          "legendFormat": "{{method}} {{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "requests",
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
	    "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Total Requests/sec (Traffic)",
      "type": "stat",
      "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"tablecrm-backend\"}[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 6,
      "title": "Error Rate % (Errors)",
      "type": "stat",
      "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{job=\"tablecrm-backend\",status=~\"5..\"}[1m])) / sum(rate(http_requests_total{job=\"tablecrm-backend\"}[1m]))) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 7,
      "title": "Average Response Time (Latency)",
      "type": "stat",
      "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"tablecrm-backend\"}[1m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"tablecrm-backend\"}[1m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"tablecrm-backend\"}[1m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.5},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Total In Progress (Saturation)",
      "type": "stat",
      "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "sum(http_requests_inprogress{job=\"tablecrm-backend\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 9,
      "title": "Requests by Status Code",
      "type": "piechart",
      "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(increase(http_requests_total{job=\"tablecrm-backend\"}[5m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "pie"
      }
    },
    {
      "id": 10,
      "title": "Top Endpoints by Request Rate",
      "type": "table",
      "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_requests_total{job=\"tablecrm-backend\"}[5m])) by (method, handler))",
          "format": "table",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true
            },
            "renameByName": {
              "method": "Method",
              "handler": "Endpoint",
              "Value": "Requests/sec"
            }
          }
        }
      ]
    }
  ]
}
